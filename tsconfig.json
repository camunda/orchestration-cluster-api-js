{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "src",
    "scripts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}